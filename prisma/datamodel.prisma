enum Permission {
  ADMIN
  USER
  PROJECREATE
  PROJECTUPDATE
  PROJECTDELETE
  PERMISSIONUPDATE
}

enum Type {
  PROMOTER
  SUPPORTER
}

enum AdminType {
  SUPERADMIN
  ADMIN
  EDITOR
  ANALYST
  CSUPPORT
}

type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  displayName: String! @unique
  email: String! @unique
  password: String!
  phone: String! @unique
  isVerified: Boolean! @default(value: "false")
  type: Type! @default(value: PROMOTER)
  ownedProjects: [Project!]!
  location: Location
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  profilePicture: String!
    @default(value: "https://res.cloudinary.com/inkuulu/image/upload/v1553480376/inkuulu/default-avatar.jpg")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Admin {
  id: ID! @unique
  firstName: String!
  lastName: String!
  displayName: String! @unique
  email: String! @unique
  password: String!
  phone: String! @unique
}

type Project {
  id: ID! @unique
  title: String!
  shortDescription: String!
  description: String!
  slug: String! @unique
  cover: String
  thumbnail: String
  featured: Boolean! @default(value: "false")
  featuredSpread: String
  amount: Float!
  category: Category!
  owner: User!
  # Make location required later
  location: Location
  # reviews: [Review!]!
  # views: Views!
  # policies: Policies
  # supporters: [Supporter!]!
  # pictures: [Picture!]!
  # popularity: Int
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Category {
  id: ID! @unique
  title: String! @unique
  slug: String! @unique
  description: String!
  code: String! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Picture {
  id: ID! @unique
  url: String!
  label: String!
}

type Location {
  id: ID! @unique
  lat: Float!
  lng: Float!
  neighbourHood: Neighbourhood
  user: User
  project: Project
  address: String!
  directions: String!
}

type Neighbourhood {
  id: ID! @unique
  locations: [Location!]!
  name: String!
  slug: String!
  homePreview: Picture
  city: City!
  featured: Boolean!
  popularity: Int!
}

type City {
  id: ID! @unique
  name: String!
  neighbourhoods: [Neighbourhood!]!
}
