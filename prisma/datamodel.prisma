enum Permission {
  ADMIN
  USER
  PROJECREATE
  PROJECTUPDATE
  PROJECTDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  phone: String!
  isAdmin: Boolean! @default(value: "false")
  isVerified: Boolean! @default(value: "false")
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  # profilePicture: Picture
}

type Project {
  id: ID! @unique
  title: String!
  shortDescription: String!
  description: String!
  slug: String! @unique
  thumbnail: String
  cover: String
  amount: Int!
  category: Category!
  owner: User!
  # reviews: [Review!]!
  # views: Views!
  # policies: Policies
  createdAt: DateTime!
  updatedAt: DateTime!
  # supporters: [Supporter!]!
  # pictures: [Picture!]!
  # popularity: Int
}

type Category {
  id: ID! @unique
  title: String! @unique
  slug: String! @unique
  description: String!
  code: String! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Picture {
  id: ID! @unique
  url: String!
}

type Location {
  id: ID! @unique
  lat: Float!
  lng: Float!
  # neighbourHood: Neighbourhood
  # user: User
  place: Project
  address: String!
  directions: String!
  # experience: Experience
  # restaurant: Restaurant
}
